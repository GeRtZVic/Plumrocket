<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Create Review1</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="plumrocket-review-tab"
                   template="Plumrocket_Reviews::review-form.phtml">
            </block>
            <block
                class="Magento\Customer\Block\Account\Dashboard"
                name="customer.account.link.back"
                template="Magento_Customer::account/link/back.phtml"/>
        </referenceContainer>
    </body>
</page>
